BLD_NAME="Http Library"     # Displayable full product name
BLD_VERSION="1.0.0"         # Major.minor.patch
BLD_NUMBER="B0"             # The appended build number
BLD_COMPANY="Embedthis"     # Original Author
BLD_PRODUCT="http"          # One word product name
BLD_PRODUCT_HTTP=1          # Building Http
BLD_HTTP_PORT=6600          # Test HTTP port
BLD_SSL_PORT=6643           # Test SSL port


#
#   Directories to build
#
BLD_DIRS="build src doc projects package"

#
#   Include the per O/S configuration
#
KIND=BUILD ; . ${BLD_TOP}/build/config/config.${BLD_BUILD_OS}
KIND=HOST  ; . ${BLD_TOP}/build/config/config.${BLD_HOST_OS}
